<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Inusrance__c</field>
        <field>Refund_Status__c</field>
        <field>Deliver_To__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Mail__c.Inusrance__c</field>
                <operation>greaterThan</operation>
                <value>100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Mail__c.Refund_Status__c</field>
                <operation>equals</operation>
                <value>Waiting for Approval</value>
            </criteriaItems>
            <criteriaItems>
                <field>Mail__c.Delivery_Status__c</field>
                <operation>equals</operation>
                <value>Missing</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approve By Refunder</label>
        <name>Approve_By_Refunder</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>matthew.trovillo@playful-raccoon-s26b52.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>matthew.trovillo@yahoo.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Requires additional approval for over 1000 dollar insurance</description>
        <entryCriteria>
            <criteriaItems>
                <field>Mail__c.Delivery_Status__c</field>
                <operation>equals</operation>
                <value>Missing</value>
            </criteriaItems>
            <criteriaItems>
                <field>Mail__c.Inusrance__c</field>
                <operation>greaterThan</operation>
                <value>1000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Mail__c.Refund_Status__c</field>
                <operation>equals</operation>
                <value>Waiting for Approval</value>
            </criteriaItems>
        </entryCriteria>
        <label>More Approval for over 1000</label>
        <name>More_Approval_for_over_1000</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process required for refunds</description>
    <emailTemplate>unfiled$public/SupportCaseAssignmentNotification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Mail__c.Delivery_Status__c</field>
            <operation>equals</operation>
            <value>Missing</value>
        </criteriaItems>
        <criteriaItems>
            <field>Mail__c.Inusrance__c</field>
            <operation>greaterThan</operation>
            <value>100</value>
        </criteriaItems>
        <criteriaItems>
            <field>Mail__c.Refund_Status__c</field>
            <operation>equals</operation>
            <value>Waiting for Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_Refund</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Refused_Refund</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Approving Insurance Refund</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
